---
import Card from "@components/Card.astro";
import MainLayout from "@layouts/MainLayout.astro";

const data = await fetch("https://furniture-katalog.vercel.app/data.json").then(
  (res) => res.json()
);
---

<MainLayout pageTitle="Collections">
  <div class="max-w-lg">
    <h1
      class="sm:text-4xl text-3xl font-bold text-slate-800 after:content-[''] after:block after:border-b-4 after:border-b-slate-300 after:mt-1 w-fit"
    >
      Our Collections
    </h1>
  </div>
  <div class="container grid sm:grid-cols-4 grid-cols-2 gap-4 mt-12 pb-8">
    {
      data.map((item: any) => (
        <Card {...item} urutan={data.indexOf(item) + 1} />
      ))
    }
  </div>
</MainLayout>
